<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Garage_2._0</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Garage_2._0.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3 sectioncolors navbar-dark rounded-3">
                <a class="navbar-brand m-3" asp-area="" asp-controller="Vehicles" asp-action="Index">Garage Stockholm</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
@*                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Vehicle" asp-action="Index">Park vehicle</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Vehicle" asp-action="Statistics">Statistics</a>
                        </li>
@*                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="VehicleTypes" asp-action="Index">Vehicle Types</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Vehicle" asp-action="/Admin">Admin</a>
                        </li>
                   </ul>
                </div>
        </nav>
        </div>   
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

@*    <footer>
        <div class="container-fluid bg-white">
             -  - NET22B Group 1
        </div>
    </footer>*@

    <footer class="rounded-3">
            <div class="container rounded-3">
                <div class="row mt-5 pb-5 bg-white rounded-3">
            <table class="mt-3 text-center rounded-3"><tr>
                <td>Project: Garage 2.0</td>
                <td>NET22B Group 1</td>
                <td>&copy; 2022</td>   
            </tr>            
            </table>
                </div>
            </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
